{
  "type": "object",
  "properties": {
    "cores": {
      "type": "integer",
      "minimum": 1
    },
    "memory": {
      "type": "integer",
      "minimum": 2048
    },
    "architecture": {
      "enum": ["amd64", "arm64"]
    },
    "disk_size": {
      "type": "integer",
      "minimum": 5,
      "description": "In GB"
    },
    "target_namespace": {
      "type": "string",
      "description": "Kubernetes namespace to provision in"
    },
    "mac_address": {
      "type": "string",
      "default": ""
    }
  },
  "required": [
    "cores",
    "memory",
    "architecture",
    "disk_size"
  ]
}
